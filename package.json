{
	"name": "ts-openapi-sample",
	"version": "1.0.0",
	"main": "index.js",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^18.14.6",
		"husky": ">=6",
		"lint-staged": ">=10",
		"nodemon": "^2.0.21",
		"pinst": ">=2",
		"prettier": "^2.8.6",
		"ts-lib-openapi-backend": "^1.0.0-beta.6",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.5"
	},
	"scripts": {
		"codegen": "yarn ts-node --transpile-only node_modules/ts-lib-openapi-backend/bin/ts-openapi-codegen.ts -s src/schemas -o src/generated/openapi-spec.json -p src/routes/**/*.ts src/routes/openapi-base.yaml src/generated/index.ts",
		"build": "yarn codegen && tsc",
		"start:dev": "yarn codegen && ts-node src/server.ts",
		"watch": "nodemon",
		"postinstall": "husky install",
		"prepublishOnly": "pinst --disable",
		"postpublish": "pinst --enable"
	},
	"dependencies": {
		"@hapi/hapi": "^21.3.1"
	},
	"nodemonConfig": {
		"ignore": [
			".git",
			"node_modules",
			"**/generated/**"
		],
		"ext": ".ts,.yaml",
		"watch": [
			"src"
		],
		"exec": "yarn start:dev"
	},
	"packageManager": "yarn@3.5.0",
	"prettier": {
		"printWidth": 120,
		"useTabs": true,
		"bracketSpacing": false,
		"trailingComma": "all"
	},
	"lint-staged": {
		"*.{yml,json,ts,js,md}": "prettier --write"
	}
}
