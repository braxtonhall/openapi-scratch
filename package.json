{
  "name": "ts-openapi-sample",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^18.14.6",
    "nodemon": "^2.0.21",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "codegen": "yarn ts-openapi-codegen -o src/generated/openapi-spec.json -p src/routes/**/*.ts src/routes/openapi-base.yaml src/generated/index.ts",
    "build": "yarn codegen && tsc",
    "start:dev": "yarn codegen && ts-node src/server.ts",
    "watch": "nodemon"
  },
  "dependencies": {
    "@hapi/hapi": "^21.3.0"
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules",
      "**/generated/**"
    ],
    "ext": ".ts,.yaml",
    "watch": [
      "src"
    ],
    "exec": "yarn start:dev"
  },
  "packageManager": "yarn@3.5.0",
  "resolutions": {
    "ts-openapi-backend": "portal:/Users/bhall/Documents/ts-openapi-backend"
  }
}
